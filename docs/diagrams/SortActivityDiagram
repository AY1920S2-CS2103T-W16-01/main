@startuml
start
:User presses tab;


partition CommandDetection {
    if (Command word) then 
        : Add/Edit/Pom;
    else
        : Delete/Done;
    else if
        : Sort;
    else if
        : Unknown;
    endif
}

partition PomodoroEnd {
    :Prompt: "Have you done the task?";

    if (User says 'Y') then
        : Update task in model to be done;
    else (['N'])
    endif

    :Prompt: "Would you like to take a break?";

    if (User says 'Y') then
        : Rest timer counts down;
        : Timer ends;
    else (['N'])
    endif
}

stop;
@enduml
