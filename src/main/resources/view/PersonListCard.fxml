<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.CheckBox?>


<HBox fx:id="cardPane" 
    xmlns="http://javafx.com/javafx/8" 
    xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <HBox styleClass="tasklist-card">
            <GridPane.margin>
                <Insets bottom="10.0" top="10.0" />
            </GridPane.margin>
            <VBox alignment="CENTER">
                <Label fx:id="id" alignment="TOP_LEFT" styleClass="cell_big_label">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE" />
                    </minWidth>
                </Label>
            </VBox>
            <VBox alignment="CENTER" minHeight="105" GridPane.columnIndex="0">
                <padding>
                    <Insets bottom="5" left="15" right="5" top="5" />
                </padding>
                <CheckBox fx:id="done" styleClass="checkbox"/>
            </VBox>
            <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="1">
                <padding>
                    <Insets bottom="5" left="15" right="5" top="5" />
                </padding>
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <Label fx:id="priority" alignment="TOP_LEFT" styleClass="cell_small_label" text="\$priority" />
                    <Label fx:id="name" styleClass="cell_big_label" text="\$first" wrapText="true" />
                </HBox>
                <FlowPane fx:id="tags" />
                <Label fx:id="description" styleClass="cell_small_label" text="\$description" wrapText="true" />
                <Label id="reminder" fx:id="reminder" styleClass="reminder" />
            </VBox>
        </HBox>
        <rowConstraints>
            <RowConstraints />
        </rowConstraints>

    </GridPane>

</HBox>
