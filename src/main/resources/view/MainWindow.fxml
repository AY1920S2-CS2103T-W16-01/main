<fx:root minHeight="600" minWidth="450" onCloseRequest="#handleExit" title="Address App" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/address_book_32.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <!-- <URL value="@DarkTheme.css" /> -->
        <URL value="@Extensions.css" />
      </stylesheets>

      <VBox>
        <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
          <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
          </Menu>
        </MenuBar>
            <SplitPane dividerPositions="0.298" prefHeight="560.0" prefWidth="200.0">
              <items>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                     <children>
            
                                      <StackPane fx:id="resultDisplayPlaceholder" layoutY="300.0" maxHeight="160.0" minHeight="-Infinity" minWidth="400.0" prefHeight="146.0" prefWidth="54.0" styleClass="pane-with-border">
                      <padding>
                        <Insets bottom="5" left="10" right="10" top="5" />
                      </padding>
                    </StackPane>
            
                                <StackPane fx:id="commandBoxPlaceholder" layoutY="460.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="400.0" prefHeight="14.0" prefWidth="55.0" styleClass="pane-with-border">
                      <padding>
                        <Insets bottom="5" left="10" right="10" top="5" />
                      </padding>
                    </StackPane>
                     </children>
                  </AnchorPane>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                     <children>
            
                                <VBox fx:id="personList" minWidth="340" styleClass="pane-with-border">
                      <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                      </padding>
                      <StackPane fx:id="personListPanelPlaceholder" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="560.0" prefWidth="560.0" />
                    </VBox>
                     </children>
                  </AnchorPane>
              </items>
               <effect>
                  <GaussianBlur radius="0.0" />
               </effect>
            </SplitPane>

        <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="ALWAYS" />
      </VBox>
    </Scene>
  </scene>
</fx:root>
